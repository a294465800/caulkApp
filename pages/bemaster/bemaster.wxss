/* pages/bemaster/bemaster.wxss */

.container {
  background-color: #eee;
  padding-top: 30rpx;
}

/* 表单 */

.form-item {
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 15px;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
}

.form-group {
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 15px;
}

.label-control {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
  padding: 20rpx 0;
}

.label-control:last-of-type {
  border-bottom: 0;
}

.label-text {
  color: #000;
  width: 140rpx;
  font-size: 30rpx;
}

.input-control {
  flex: 1;
}

.input-btn {
  font-size: 12px;
  padding: 0 4px;
  line-height: 2.3;
}
