/**index.wxss**/

.container {
  height: 100%;
  background-color: #efefef;
}

/* 表单样式 */

.order-form-wrap {
  flex: 1;
  color: #666;
}

.order-from-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.order-from-title image {
  width: 21px;
  height: 25px;
  margin-right: 20rpx;
}

.order-form {
  border: 1px solid #e0dede;
  border-bottom: 0;
  flex: 1;
  position: relative;
}

.order-form-item {
  justify-content: space-between;
  font-size: 12pt;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e0dede;
  background-color: #fff;
}

.order-form-item:last-child {
  border-bottom: 0;
}

.order-form-address {
  flex: 1;
  margin-right: 20rpx;
  max-width: 440rpx;
}

.location-icon {
  width: 18px;
  height: 24px;
}

.order-textarea {
  width: 100%;
  height: 120rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: #333;
}

.order-submit {
  background-color: #047911;
  color: #fff;
  width: 90%;
  border-radius: 50rpx;
  margin-top: 10rpx;
  border: 0 !important;
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.submit-hover {
  background-color: #046d0f;
}
