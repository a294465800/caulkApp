<!--index.wxml-->
<view class='container'>
  <!--轮播  -->
  <swiper indicator-dots autoplay interval="5000" duration="1000" class='swiper-images-wrap' indicator-active-color='#047911' indicator-color='#fff'>
    <block wx:for="{{imgUrls}}" wx:for-item="img" wx:key="id">
      <swiper-item>
        <image mode='aspectFill' src="{{img.url}}" class="slide-image" class='order-img-item' />
      </swiper-item>
    </block>
  </swiper>
  <!--/轮播  -->

  <!--form表单  -->
  <view class='order-form-wrap'>
    <view class='order-from-title flex-row flex-center'>
      <image mode='aspectFit' src='/images/icon/order-icon.png'></image>预约
    </view>
    <view class='order-form'>
      <form report-submit bindsubmit='submit'>
        <label class='input-label order-form-item'>
          <view class='input-title'>您的称呼：</view>
          <input class='input-view' maxlength='4' placeholder='请输入您的称呼' name="name" value="{{name}}"></input>
        </label>
        <label class='input-label order-form-item'>
          <view class='input-title'>联系方式：</view>
          <input class='input-view' maxlength='11' placeholder='请输入您联系方式' type='number' value='{{number}}' name="number"></input>
        </label>
        <view class='flex-row order-form-item' bindtap='getLocation'>
          <view class='input-title'>您的位置：</view>
          <input disabled class='order-form-address text-flow' placeholder='请输入您位置' name="address" value='{{address}}'></input>
          <image class='location-icon' mode='aspectFit' src='/images/icon/location.png'></image>
        </view>
        <label class='order-form-item block'>
          <view>详细位置补充：</view>
          <textarea auto-height maxlength='200' value='{{detail}}' name="detail" class='order-textarea'></textarea>
        </label>
        <button form-type="submit" class='order-submit' hover-class='submit-hover'>预约美缝</button>
      </form>
    </view>
  </view>
  <!--/form表单  -->
</view>