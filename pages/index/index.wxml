<!--index.wxml-->
<view class='container flex-column'>
  <!--轮播  -->
  <swiper indicator-dots autoplay interval="5000" duration="1000" class='swiper-images-wrap' indicator-active-color='#047911'>
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image mode='aspectFill' src="{{item}}" class="slide-image" class='order-img-item' />
      </swiper-item>
    </block>
  </swiper>
  <!--/轮播  -->

  <!--form表单  -->
  <view class='order-form-wrap flex-column'>
    <view class='order-from-title flex-row flex-center'>
      <image mode='aspectFit' src='/images/icon/order-icon.png'></image>预约
    </view>
    <view class='order-form'>
      <form report-submit bindsubmit='submit'>
        <label class='input-label order-form-item'>
          <view class='input-title'>你的称呼</view>
          <input class='input-view' name="name"></input>
        </label>
        <label class='input-label order-form-item'>
          <view class='input-title'>联系方式</view>
          <input class='input-view' type='number' name="number"></input>
        </label>
        <view class='flex-row order-form-item' bindtap='getLocation'>
          <view class='input-title'>详细地址</view>
          <input disabled class='order-form-address text-flow' name="address" value='{{address}}'></input>
          <image class='location-icon' mode='aspectFit' src='/images/icon/location.png'></image>
        </view>
        <!-- <label class='order-form-item block'>
          <view>详细位置</view>
          <textarea maxlength='200' class='order-textarea'></textarea>
        </label> -->
        <button form-type="submit" class='order-submit' hover-class='submit-hover'>一键预约</button>
      </form>
    </view>
  </view>
  <!--/form表单  -->
</view>