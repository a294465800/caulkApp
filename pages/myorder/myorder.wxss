/* pages/myorder/myorder.wxss */

.container {
  background-color: #eee;
}

/* 导航 */

.nav-wrap {
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.nav-item {
  text-align: center;
  flex: 1;
  font-size: 16px;
  padding: 20rpx 0 30rpx;
}

.nav-item.active {
  border-bottom: 3px solid #047911;
  color: #047911;
}

/* 订单列表 */

.order-list {
  flex: 1;
  position: relative;
  display: none;
}

.order-item-wrap {
  background-color: #fff;
  margin-bottom: 30rpx;
}

.order-item-title {
  justify-content: space-between;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  padding: 20rpx 30rpx;
}

.order-item-title-id {
  font-size: 30rpx;
  color: #444;
  text-align: left;
}

.order-item-title-time {
  color: #888;
  font-size: 26rpx;
  text-align: right;
}

.order-item-content {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ddd;
}

.order-item-content-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.order-item-content-content {
  flex: 1;
  justify-content: space-between;
}

.order-item-content-content-title {
  max-width: 460rpx;
  font-size: 16px;
}

.order-item-content-content-type {
  color: #888;
  font-size: 14px;
  justify-content: space-between;
}

.order-item-content-content-price {
  font-size: 16px;
  text-align: right;
  color: #fc2a57;
}

.order-item-price {
  text-align: right;
  font-size: 14px;
  color: #444;
  padding: 20rpx 30rpx;
  justify-content: space-between;
}

.order-item-btns {
  text-align: right;
  padding: 0 30rpx 20rpx;
}

.reservation-info-btn {
  display: inline-block;
  font-size: 14px;
  color: #333;
  border: 1px solid #333;
  border-radius: 3px;
  padding: 15rpx 20rpx;
  margin-left: 20rpx;
}

.reservation-info-btn-hover {
  background-color: #333;
  color: #fff;
}

.confirm-text {
  color: #fc2a57;
}

/* 评论框 */

.comment-add-wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

.comment-add-item {
  width: 90%;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 5px;
}

.comment-add-title {
  font-size: 36rpx;
  text-align: center;
}

.label-title {
  font-size: 32rpx;
  margin: 20rpx 0;
}

.textarea {
  box-sizing: border-box;
  font-size: 30rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 30rpx;
}

.textarea-comment {
  font-size: 30rpx;
  text-indent: 2em;
}
