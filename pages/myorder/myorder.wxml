<!--pages/myorder/myorder.wxml-->
<view class='container'>

  <!--导航  -->
  <view class='nav-wrap flex-row' catchtap='switchNav'>
    <view class='nav-item {{index == currentNav?"active":""}}' wx:for="{{navs}}" wx:for-item="navItem" wx:key="type" data-type='{{navItem.type}}' data-index='{{index}}'>{{navItem.name}}</view>
  </view>
  <!--/导航  -->

  <!--订单列表  -->
  <view class='order-list' wx:if="{{currentNav == 0}}">
    <view class='order-item-wrap' wx:for="{{orders}}" wx:for-item="orderItem" wx:key="id">
      <view class='order-item-title flex-row'>
        <view class='order-item-title-id'>编号：{{orderItem.order_id}}</view>
        <view class='order-item-title-time'>{{orderItem.time}}</view>
      </view>
      <view class='order-item-content flex-row' wx:for="{{orderItem.commodities}}" wx:for-item="commodityItem" wx:key="id">
        <image class='order-item-content-img' src='{{commodityItem.url}}' mode='aspectFit'></image>
        <view class='order-item-content-content flex-column'>
          <view class='order-item-content-content-title multi-two-text-flow'>{{commodityItem.name}}</view>
          <view class='order-item-content-content-type flex-row'>
            <view class='order-item-content-content-type-name'>{{commodityItem.type}}</view>
            <view class='order-item-content-content-type-num'>x{{commodityItem.num}}</view>
          </view>
          <view class='order-item-content-content-price'>￥{{commodityItem.price}}</view>
        </view>
      </view>
      <view class='order-item-price'>合计：￥{{orderItem.all_price}}（含运费￥{{orderItem.fare}}）</view>
      <view class='order-item-btns'>
        <view class='reservation-info-btn' hover-class='reservation-info-btn-hover' hover-stay-time='150' catchtap='confirmOrder' data-id='{{orderItem.id}}'>确认收货</view>
      </view>
    </view>
  </view>
  <!--/订单列表  -->

  <!--订单列表  -->
  <view class='order-list' wx:if="{{currentNav == 1}}">
    <view class='order-item-wrap' wx:for="{{orders}}" wx:for-item="orderFinishItem" wx:key="id">
      <view class='order-item-title flex-row'>
        <view class='order-item-title-id'>编号：{{orderFinishItem.order_id}}</view>
        <view class='order-item-title-time'>{{orderFinishItem.time}}</view>
      </view>
      <view class='order-item-content flex-row' wx:for="{{orderFinishItem.commodities}}" wx:for-item="commodityItem" wx:key="id">
        <image class='order-item-content-img' src='{{commodityItem.url}}' mode='aspectFit'></image>
        <view class='order-item-content-content flex-column'>
          <view class='order-item-content-content-title multi-two-text-flow'>{{commodityItem.name}}</view>
          <view class='order-item-content-content-type flex-row'>
            <view class='order-item-content-content-type-name'>{{commodityItem.type}}</view>
            <view class='order-item-content-content-type-num'>x{{commodityItem.num}}</view>
          </view>
          <view class='order-item-content-content-price'>￥{{commodityItem.price}}</view>
        </view>
      </view>
      <view class='order-item-price flex-row'>
        <view class='confirm-text'>已确认收货</view>
        <view>合计：￥{{orderFinishItem.all_price}}（含运费￥{{orderFinishItem.fare}}）</view>
      </view>
    </view>
  </view>
  <!--/订单列表  -->
</view>