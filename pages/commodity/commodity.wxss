/* pages/commodity/commodity.wxss */
@import "/wxParse/wxParse.wxss";
@import "../common/quill.bubble.wxss";

.container {
  background-color: #eee;
  padding-bottom: 160rpx;
}

/* 商品 */

.commodity-content-info {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.commodity-content-info-title {
  font-size: 18px;
  color: #333;
}

.commodity-content-info-suinfo {
  justify-content: space-between;
  align-content: center;
  margin-top: 20rpx;
}

.commodity-content-info-price {
  color: #f92a54;
}

.commodity-content-info-sell {
  padding: 10rpx;
  border-radius: 4px;
  border: 1px solid #ffac36;
  color: #ffac36;
  font-size: 13px;
}

/* 商品详情 */

.commodity-item-imgs {
  padding: 20rpx;
}

.commodity-item {
  background-color: #fff;
  margin-top: 30rpx;
}

.commodity-item-title {
  justify-content: space-between;
  font-size: 16px;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
}

.commodity-item-content {
  padding: 30rpx;
  font-size: 16px;
}

.commodity-item-content-item {
  font-size: 14px;
  color: #999;
  margin-bottom: 20rpx;
}

.commodity-item-content-item-type {
  color: #333;
  margin-right: 20rpx;
}

.commodity-item-img {
  width: 100%;
  vertical-align: top;
}

/* 购买按钮 */

.commodity-buy-btns {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #ddd;
  align-items: center;
  background-color: #fff;
}

.commodity-buy-icons {
  flex: 1;
  justify-content: center;
}

.commodity-buy-icons {
  font-size: 14px;
  color: #999;
  padding-left: 40rpx;
}

.commodity-buy-btn {
  padding: 30rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #ffac36;
}

.commodity-buy-btn:last-of-type {
  background-color: #fc2a57;
}

.commodity-price {
  color: #f92a54;
  flex: 1;
  padding-left: 30rpx;
  font-size: 30rpx;
}

/* 购买弹起框 */

.commodity-box-top, .commodity-box {
  overflow: unset;
}

.commodity-box-wrap {
  position: fixed;
  left: 0;
  top: -100%;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.commodity-box-wrap.active {
  top: 0;
}

.commodity-box {
  position: absolute;
  left: 0;
  bottom: -100%;
  background-color: #fff;
  height: 70%;
  width: 100%;
  justify-content: space-between;
  transition: bottom 0.5s;
}

.commodity-box.active {
  bottom: 0;
  transition: bottom 0.5s;
}

.commodity-box-title {
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ddd;
  position: relative;
  overflow: unset;
}

.commodity-box-title-info {
  align-items: center;
  overflow: unset;
}

.commodity-box-title-img {
  position: absolute;
  left: 30rpx;
  bottom: 20rpx;
  width: 200rpx;
  height: 200rpx;
  padding: 6rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-shadow: 0 0 2px #333;
}

.commodity-box-title-plus {
  margin-left: 240rpx;
}

.commodity-box-title-price {
  font-size: 16px;
  color: #fc2a57;
}

.commodity-box-title-current {
  font-size: 14px;
  color: #333;
  margin: 10rpx 0;
}

.commodity-box-type {
  font-size: 14px;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ddd;
}

.commodity-box-type-title {
  margin-bottom: 10rpx;
}

.commodity-box-type-item {
  padding: 10rpx 15rpx;
  background-color: #eee;
  border-radius: 4px;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.commodity-box-type-item.active {
  background-color: #ffac36;
  color: #fff;
}

.commodity-box-num {
  font-size: 14px;
  color: #333;
  padding: 30rpx;
  justify-content: space-between;
}

.commodity-box-confirm {
  text-align: center;
  font-size: 16px;
  color: #fff;
  padding: 20rpx;
  background-color: #ffac36;
}

.commodity-box-type-items {
  flex-wrap: wrap;
}

/* 数量选择组件 */

.cart-item-content-info-btns {
  color: #fff;
  width: 180rpx;
}

.cart-item-content-info-text {
  color: #000;
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
}

.cart-item-content-info-delete, .cart-item-content-info-plus {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 44rpx;
  border-radius: 2px;
}

.cart-item-content-info-delete {
  background-color: #ccc;
}

.cart-item-content-info-delete-hover {
  background-color: #aaa;
}

.cart-item-content-info-plus {
  background-color: #ffac34;
}

.cart-item-content-info-plus-hover {
  background-color: #f1a333;
}

.red {
  background-color: #fc2a57;
}

.red-text {
  color: #fc2a57;
}

.orange {
  background-color: #ffac36;
}
