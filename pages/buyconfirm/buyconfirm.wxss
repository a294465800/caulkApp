/* pages/buyconfirm/buyconfirm.wxss */

.container {
  background-color: #eee;
  height: 100%;
}

.commodity-list {
  margin-bottom: 30rpx;
}

.flex-wrap {
  flex: 1;
  position: relative;
}

.scroll {
  box-sizing: border-box;
}

/* 购物车项 */

.cart-item {
  background-color: #fff;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
}

.cart-item>icon {
  margin-right: 20rpx;
}

.cart-item-content {
  flex: 1;
  font-size: 16px;
}

.cart-item-content-img {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ddd;
  margin-right: 20rpx;
}

.cart-item-content-info {
  justify-content: space-between;
  flex: 1;
}

.cart-item-content-info-title {
  max-width: 390rpx;
}

.cart-item-content-info-type {
  color: #888;
  font-size: 14px;
}

.cart-item-content-info-operation {
  justify-content: space-between;
  align-items: center;
}

.cart-item-content-info-price {
  color: #fc2a57;
}

.cart-item-content-number {
  color: #999;
  font-size: 14px;
}

/* 本页样式 */

.confirm-item {
  padding: 20rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
  font-size: 16px;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.confirm-item-price {
  color: #fc2a57;
}

.margin-bottom {
  margin-bottom: 30rpx;
}

.margin-top {
  margin-top: 30rpx;
}

.confirm-remark-wrap {
  background-color: #fff;
  padding: 0 30rpx 30rpx;
  font-size: 16px;
  margin-bottom: 60rpx;
}

.confirm-remark-title {
  padding: 20rpx 0;
}

.confirm-textarea {
  width: 100%;
  height: 300rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 14px;
}

/* 购买按钮 */

.cart-buy {
  background-color: #fff;
  width: 100%;
  font-size: 16px;
  align-items: center;
  border-top: 1px solid #ddd;
}

.cart-buy-price, .cart-buy-btn {
  padding: 30rpx;
}

.cart-buy-price {
  color: #fc2a57;
  flex: 1;
}

.cart-buy-btn {
  background-color: #fc2a57;
  color: #fff;
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.cart-buy-btn-hover {
  background-color: #ec234f;
}
